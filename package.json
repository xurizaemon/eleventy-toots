{
  "name": "@xurizaemon/eleventy-toots",
  "version": "0.0.1",
  "description": "Import toots to markdown.",
  "main": "toots.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xurizaemon/eleventy-toots.git"
  },
  "scripts": {
    "pretest": "npx eslint toots.js test/**.js",
    "test": "npx ava --no-worker-threads",
    "coverage": "nyc npm run test"
  },
  "keywords": [
    "eleventy",
    "eleventy-utility"
  ],
  "author": {
    "name": "Chris Burgess",
    "email": "chris@giantrobot.co.nz",
    "url": "https://chris.bur.gs/"
  },
  "license": "AGPLv3+",
  "bugs": {
    "url": "https://github.com/xurizaemon/eleventy-toots/issues"
  },
  "homepage": "https://github.com/xurizaemon/eleventy-toots#readme",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "ava": "^6.1.3",
    "eslint": "^9.5.0",
    "globals": "^15.4.0",
    "nyc": "^15.1.0",
    "rss-parser": "^3.13.0"
  },
  "ava": {
    "failFast": false,
    "files": [
      "./test/*.{js,cjs,mjs}"
    ],
    "watchMode": {
      "ignoreChanges": [
        "./.cache/*",
        "./img/*",
        "./test/img/*",
        "./test/**/generated*"
      ]
    }
  },
  "nyc": {
    "include": [
      "toots.js"
    ],
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true
  }
}
